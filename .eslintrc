{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "airbnb",
    "airbnb-typescript",
    "plugin:react/jsx-runtime"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "tsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "react/function-component-definition": "off",
    "react/jsx-props-no-spreading": "off"
  }
}
